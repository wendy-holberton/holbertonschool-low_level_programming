CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic
all: $(OBJ)
	$(CC) $(CFLAGS) -c -o main.o main.c
	$(CC) $(CFLAGS) -c -o school.o school.c
	$(CC) $(OBJ) -o $(NAME)
clean:
	$(RM) -f *~ $(NAME)	
oclean::
	$(RM) -f $(OBJ)
fclean: 
	$(RM) -f *~ $(NAME) $(OBJ) 
re: oclean all
